<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/baseline_arrow_back_24"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="HP"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/hp_stat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/hp_stat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="ATK"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/attack_stat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/attack_stat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="DEF"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/defense_stat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/defense_stat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:text="SPD"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/speed_stat"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/speed_stat" />

    <View
        android:id="@+id/image_background"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@drawable/pokemon_details_card"
        android:backgroundTint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_pokemon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/_06189_pokemon_charizard_png_free_photo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_pokemon_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="#1"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_pokemon_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Charizard"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/image_background" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_pokemon_base_stats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Base Stats"
        android:textColor="@color/black"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/type_chip_group" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/hp_stat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100/100"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/hp_stat"
        app:layout_constraintEnd_toEndOf="@id/hp_stat"
        app:layout_constraintStart_toStartOf="@id/hp_stat"
        app:layout_constraintTop_toTopOf="@id/hp_stat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/attack_stat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100/100"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/attack_stat"
        app:layout_constraintEnd_toEndOf="@id/attack_stat"
        app:layout_constraintStart_toStartOf="@id/attack_stat"
        app:layout_constraintTop_toTopOf="@id/attack_stat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/defense_stat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100/100"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/defense_stat"
        app:layout_constraintEnd_toEndOf="@id/defense_stat"
        app:layout_constraintStart_toStartOf="@id/defense_stat"
        app:layout_constraintTop_toTopOf="@id/defense_stat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/speed_stat_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100/100"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/speed_stat"
        app:layout_constraintEnd_toEndOf="@id/speed_stat"
        app:layout_constraintStart_toStartOf="@id/speed_stat"
        app:layout_constraintTop_toTopOf="@id/speed_stat" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/type_chip_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_pokemon_name" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/hp_stat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:progress="100"
        app:indicatorColor="@color/red"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_pokemon_base_stats"
        app:trackCornerRadius="20dp"
        app:trackThickness="20dp" />


    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/attack_stat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:progress="100"
        app:indicatorColor="@color/orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hp_stat"
        app:trackCornerRadius="20dp"
        app:trackThickness="20dp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/defense_stat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:progress="20"
        app:indicatorColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/attack_stat"
        app:trackCornerRadius="20dp"
        app:trackThickness="20dp" />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/speed_stat"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        android:progress="100"
        app:indicatorColor="@color/gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/defense_stat"
        app:trackCornerRadius="20dp"
        app:trackThickness="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>